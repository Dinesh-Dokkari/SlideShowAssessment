@model SlidesShow.DTOs.Register

@{
    ViewData["Title"] = "register";
    bool isValidUser = false;
    if (ViewBag.ValidUser != null)
    {
        isValidUser = ViewBag.ValidUser;
    }
}

@if (!isValidUser)
{

            <div class="col-md-4">
                <form asp-controller="UserTbs" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <table>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="inputF" size="23" />
                                    <div class="errorBlock">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                </div>
                            </td>

                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="inputF" size="23" />

                                    <div class="errorBlock">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="inputF" size="23" />
                                    <div class="errorBlock">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input type="password" asp-for="Password" class="inputF" size="23" />

                                    <div class="errorBlock">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                            </td>
                            <td>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label"></label>
                                    <input type="password" asp-for="ConfirmPassword" class="inputF" size="23" />

                                    <div class="errorBlock">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <input type="submit" value="Signup" class="btn btn-primary registerbtn" />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <input type="reset" value="Reset" class="btn btn-primary registerbtn" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div>
                                    <input type="button" value="Signin" onclick="@("window.location.href='"+ @Url.Action("LoginView","Buildings")+"'");" class="btn btn-primary sighbtn" />
                                </div>
                            </td>

                        </tr>

                    </table>

                </form>
            </div>





    <div class="error">
        <h3>
            @ViewBag.message
        </h3>
    </div>
}
else
{
    <h1 class="Success">Successfully Registered</h1>
    <div>
        <a asp-controller="Buildings" asp-action="LoginView">Click here to login</a>
    </div>
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
