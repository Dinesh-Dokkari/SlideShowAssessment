@model SlidesShow.Models.createslide

<br/>
<h4>Create Slide</h4>
<hr />

<form enctype="multipart/form-data" asp-action="Create">
    <table class="table table-striped" id="table">
        <thead>
            <tr>
                <th>
                    Image
                </th>
                <th>
                    Duration
                </th>
                <th>
                    BG Color
                </th>
                <th>
                    Footer
                </th>
                <th>
                    Control
                </th>
            </tr>
        </thead>
        <tbody>

            <input type="hidden" asp-for="PropertyId" value="@ViewData["propId"]" class="form-control" />
       <tr>
            <td>
            <div class="form-group">
                <input asp-for="Image" class="form-control" />
                
            </div>
            </td>
            <td>
                <div class="form-group">
                    <input asp-for="Duration" class="form-control" />
                </div>
            </td>

            <td>
                <div class="form-group">
                    <input asp-for="BackgroundColor" class="form-control" />
                </div>
            </td>
            <td>
                <div class="form-group">
                    <input asp-for="Footer" class="form-control" />
                </div>
            </td>
            <td>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </td>
        </tr>
        </tbody>
    </table>
</form>
        


