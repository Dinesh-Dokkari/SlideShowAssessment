@model List<Preview>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<style>
    #carouselExampleIndicators {
        background:white;
        position: absolute;
        right: 0px;
        bottom: 0px;
        left: 0px;
    }
</style>


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">




    @if (Model.Count != 0)
    {
        <ol class="carousel-indicators">

            @if(Model.Count == 1)
            {
                var duration = Model.FirstOrDefault().Duration;

                <li data-target="#carouselExampleIndicators" data-slide-to="0" data-interval="@duration * 100" class="active"></li>
            }
            else
            {
                var duration = Model.FirstOrDefault().Duration;

                <li data-target="#carouselExampleIndicators" data-slide-to="0" data-interval="@duration * 100" class="active"></li>
                for (int i = 1; i < Model.Count; i++)
                {
                    var dur = Model[i].Duration * 100;
                    <li data-target="#carouselExampleIndicators" data-interval="dur" data-slide-to="@i"></li>
                }
            }
        </ol>
            
        


        <div class="carousel-inner">
            @if (Model.Count == 1)
            {
                var imageName = Model.FirstOrDefault().ImagePath;
                var duration = Model.FirstOrDefault().Duration;
                <div class="carousel-item active" >
                    <img class="d-block w-100" src="/Images/@imageName" alt="First slide">
                    @{
                        if(Model.FirstOrDefault().Footer==true){
                            <div class="carousel-caption d-none d-md-block">
                                <h3>Footer is Present for this Image</h3>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/Images/@Model[0].ImagePath" alt="First slide">
                    @{
                        if (Model.FirstOrDefault().Footer==true)
                        {
                            <div class="carousel-caption d-none d-md-block">
                                <h3>Footer is Present for this Image</h3>
                            </div>
                        }
                    }
                </div>
                for(int i=1;i<Model.Count;i++)
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/Images/@Model[i].ImagePath" alt="Second slide">
                        @{
                            if (Model[i].Footer == true)
                            {
                                <div class="carousel-caption d-none d-md-block">
                                    <h3>Footer is Present for this Image</h3>
                                </div>
                            }
                        }
                    </div> 
                }

                
            }
        </div>


        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
</div>